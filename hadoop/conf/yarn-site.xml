<configuration>
    <property>
        <name>yarn.resourcemanager.hostname</name>
        <value>{{hdfsHost}}</value>
    </property>
    <property>
        <name>yarn.nodemanager.aux-services</name>
        <value>mapreduce_shuffle</value>
    </property>
     <property>
        <name>yarn.resourcemanager.address</name>
        <value>{{hdfsHost}}:8032</value>
    </property>

    <property>
        <name>yarn.resourcemanager.scheduler.address</name>
        <value>{{hdfsHost}}:8030</value>
    </property>

    <property>
        <name>yarn.resourcemanager.resource-tracker.address</name>
        <value>{{hdfsHost}}:8031</value>
    </property>

    <property>
        <name>yarn.resourcemanager.admin.address</name>
        <value>{{hdfsHost}}:8033</value>
    </property>

    <property>
        <name>yarn.resourcemanager.webapp.address</name>
        <value>{{hdfsHost}}:8088</value>
    </property>

    <property>
      <name>yarn.nodemanager.docker-container-executor.exec-name</name>
      <value>/usr/bin/docker</value>
      <description>
         Name or path to the Docker client. This is a required parameter. If this is empty,
         user must pass an image name as part of the job invocation(see below).
      </description>
    </property>
    <property>
      <name>yarn.nodemanager.container-executor.class</name>
      <value>org.apache.hadoop.yarn.server.nodemanager.DockerContainerExecutor</value>
      <description>
         This is the container executor setting that ensures that all
    jobs are started with the DockerContainerExecutor.
      </description>
    </property>

</configuration>
